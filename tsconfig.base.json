{
   "compilerOptions": {
      // If your code doesn't require access to DOM API's, add the following
      "lib": ["esnext"],
      "declaration": true,
      "declarationDir": "./dist/types",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "rootDir": "./src"
   },
   "include": ["src"],
   "exclude": ["dist", "node_modules"]
}
